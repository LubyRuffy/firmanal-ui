<% if !@target.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @target.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @target, html: { multipart: true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :attachment %>
    <%= f.file_field :attachment %>
    <br>
    <br>
    <div class="well" style="background-color: white">
      <label>
        <input type="checkbox" id="source_code_check" />
        source code
      </label>
      <%= f.number_field :source_code, style: "display: none" %>

      <label>
        <input type="checkbox" id="angr_check" />
        angr
      </label>
      <%= f.number_field :angr, style: "display: none" %>

      <label>
        <input type="checkbox" id="afl_check" />
        afl
      </label>
      <%= f.number_field :afl, style: "display: none" %>

      <label>
        <input type="checkbox" id="network_fuzz_check" />
        network fuzz 
      </label>
      <%= f.number_field :network_fuzz, style: "display: none" %>

      <label>
        <input type="checkbox" id="metasploits_check" />
        metasploits
      </label>
      <%= f.number_field :metasploits, style: "display: none" %>

      <div class="btn btn-info" id="exploit_save">
        Save analysis method
      </div>
      <div class="btn btn-warning" id="exploit_reset">
        Edit analysis method
      </div>
    </div>

    <%= f.submit "Upload", class: "btn btn-primary btn-lg", id: "final_btn" %>
    <button class="btn btn-primary btn-lg" id="loading"><i class="fa fa-circle-o-notch fa-spin"></i> Uploading</button>

  <% end %>
</div>
