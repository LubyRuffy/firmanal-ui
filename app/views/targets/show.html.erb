<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>
<br>
<br>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @target.name %></td>

      <td>
        <table class="table table-bordered table-striped">
          <thead>
            <th>Source code</th>
            <th>angr</th>
            <th>afl</th>
            <th>network-fuzz</th>
            <th>metasploits</th>
          </thead>
          <tbody>
            <tr>
              <td>
                <% if @target.source_code == -2 %> Not analyzing 
                <% else %><%= link_to "more", "/targets/source_code/#{@target.id}" %>
                <% end %>
              </td>
              <td>
                Not analyzing
              </td>
              <td>
                <% if @target.afl == -2 %> Not analyzing
                <% else %><%= link_to "more", "/targets/afl/#{@target.id}" %>
                <% end %>
              </td>
              <td>
                <% if @target.network_fuzz == -2 %> Not analyzing
                <% else %><%= link_to "more", "/targets/network_fuzz/#{@target.id}" %>
                <% end %>
              </td>
              <td>
                <% if @target.metasploits == -2 %> Not analyzing
                <% else %><%= link_to "more", "/targets/metasploits/#{@target.id}" %>
                <% end %>
              </td>

            </tr>
          </tbody>
        </table>
      </td>

    </tr>
  </tbody>
</table>
